$('.feature-model).each(function (feature) {
	// .f400x224
	var sizeClass = feature.class;

	// get height/width:
	// f{height}x{width}
	var regex = /f\d+x\d+/;
	var height = sizeClass.match(regex)[1];
	var width = sizeClass.match(regex)[3];

	// set aspect ratio
	feature.css();
});

function setAspectRatio ($elem, $width, $height) {

	$elem.css('position', 'relative');
	$elem.children().css('position', 'absolute');
	$elem.children().css('top', '0');
	$elem.children().css('left', '0');
	$elem.children().css('right', '0');
	$elem.children().css('bottom', '0');

  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: ($height / $width) * 100%;
  }
}

For JS aspect ratio:
http://stackoverflow.com/a/14731922/778329



@mixin aspect-ratio($width, $height) {
  position: relative;
  &:before {
    display: block;
    content: "";
    width: 100%;
    padding-top: ($height / $width) * 100%;
  }
  > img {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }
}

